<% if !@resume.errors.empty? %>
    <div class="alert alert-error">
      <ul>
        <% @resume.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="well">
  <%= form_for @resume, html: { multipart: true, class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <%= f.label :name, class: 'hidden-xs control-label col-sm-3' %>
        <div class="col-sm-9">
            <div class="input-group">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                </span>
                <%= f.text_field :name, class: 'form-control',placeholder: 'name' %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :email, class: 'hidden-xs control-label col-sm-3' %>
        <div class="col-sm-9">
            <div class="input-group">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                </span>
                <%= f.text_field :email, class: 'form-control',placeholder: 'email' %>
            </div>
        </div>

    </div>
    <div class="form-group">
        <%= f.label :mobile_number, class: 'hidden-xs control-label col-sm-3' %>
        <div class="col-sm-9">
            <div class="input-group">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>
                </span>
                <%= f.text_field :mobile_number , class: 'form-control',placeholder: 'mobile number'%>
            </div>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :birthday, class: 'hidden-xs control-label col-sm-3' %>
        <div class="col-sm-9">
            <div class="input-group">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                </span>
                <%= f.text_field :birthday, class: 'form-control',placeholder: 'birthday' %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :college, class: 'hidden-xs control-label col-sm-3' %>
        <div class="col-sm-9">
            <div class="input-group">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                </span>
                <%= f.text_field :college, class: 'form-control',placeholder: 'college' %>
            </div>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :introduction, class: 'hidden-xs control-label col-sm-3' %>
        <div class="col-sm-9">
            <div class="input-group">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </span>
                <%= f.text_field :introduction, class: 'form-control',placeholder: 'introduction' %>
            </div>
        </div>
    </div>


      <%= f.fields_for :items do |p| %>
          <div class="form-group">
            <%= p.label :image , class: 'hidden-xs control-label col-sm-3'%>
              <div class="col-sm-9">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
                    </span>
                      <%= p.file_field :image, :multiple => true, name: "items[image][]", class: 'form-control' %>
                  </div>
              </div>
          </div>
      <% end %>

      <div class="form-group">
          <label class="hidden-xs control-label col-sm-3"></label>
          <div class="col-sm-9">
              <%= f.submit class: "btn btn-danger submit-btn" %>
          </div>
      </div>
  <% end %>
</div>
