<% if !flash[:notice].blank? %>
    <div class="alert alert-info">
      <%= flash[:notice] %>
    </div>
<% end %>
<br />
<%= link_to "New Resume", new_resume_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Mobile Number</th>
    <th>Email</th>
    <th>Gender</th>
    <th>College</th>
    <th>Action</th>

  </tr>
  </thead>
  <tbody>
  <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.name %></td>
        <td><%= resume.mobile_number %></td>
        <td><%= resume.email %></td>
        <td><%= resume.gender %></td>
        <td><%= resume.college %></td>
        <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.name}?" %></td>
      </tr>
  <% end %>
  </tbody>
</table>