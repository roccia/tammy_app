<div class="page-header">
  <h3>密码修改</h3>
</div>
<%= form_for(resource, as: resource_name, url: admin_registration_path, html: { method: :patch, class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: 'control-label col-md-1' %>
      <div class="col-md-4">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :current_password, '当前密码', class: 'control-label col-md-1' %>
      <div class="col-md-4">
        <%= f.password_field :current_password, autofocus: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, '新密码', class: 'control-label col-md-1' %>
      <div class="col-md-4">
        <%= f.password_field :password, autofocus: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, '再次输入', class: 'control-label col-md-1' %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autofocus: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group form-actions align-left">
      <div class="col-md-4 col-md-offset-1">
        <%= f.submit "修改密码", class: 'btn btn-primary' %>
        <%= link_to "返回", :back, class: 'btn btn-default' %>
      </div>
    </div>

<% end %>
